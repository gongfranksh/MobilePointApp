<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="personal.wl.mobilepointapp.utils.InVerseMethodTools" />

        <variable
            name="operator"
            type="personal.wl.mobilepointapp.entity.pos.BranchEmployee" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_all_operator_alpha_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/item_all_operator_tv_alpha"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/city_item_bg"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="24sp"
                tools:text="A" />

            <View style="@style/me_horizontal_view_style" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_all_operator_data_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">
            <TextView
                android:id="@+id/item_all_operator_tv_operator"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/item_selector"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text='@{operator.empName}'
                tools:text="@{operator.empName}" />
            <TextView
                android:id="@+id/item_all_operator_tv_operator_id"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/item_selector"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text='@{operator.empid}' />
        </LinearLayout>

        <View style="@style/me_horizontal_view_style" />

    </LinearLayout>
</layout>